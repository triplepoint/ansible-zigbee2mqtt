# Home Assistant integration (MQTT discovery)
homeassistant: {{ z2mq_enable_homeassistant }}

# allow new devices to join
permit_join: {{ z2mq_allow_new_devices }}

# MQTT settings
mqtt:
  # MQTT base topic for zigbee2mqtt MQTT messages
  base_topic: zigbee2mqtt
  server: 'mqtt://{{ z2mq_mqtt_host }}'
  {% if z2mq_mqtt_user_name %}
  user: '{{ z2mq_mqtt_user_name }}'
  {% endif %}
  {% if z2mq_mqtt_password %}
  password: '{{ z2mq_mqtt_password }}'
  {% endif %}

# Serial settings
serial:
  port: /dev/ttyACM0
